<Millarow:CustomWindow x:Class="Millarow.Presentation.WPF.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Millarow="http://schemas.millarow.com/wpf"
        mc:Ignorable="d" HeaderHeight="30"
        Title="MainWindow" Height="450" Width="800" Icon="icons8-atom-editor-32.png" >
    
        <ListBox Name="Brushes">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel LastChildFill="True">
                        <TextBlock Text="{Binding Name}" />
                        <Border Height="20" Width="200" Background="{Binding Brush}" />
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
</Millarow:CustomWindow>
