<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Controls="clr-namespace:Millarow.Presentation.WPF.Controls">

    <Style x:Key="{x:Type Controls:ShadowBox}" TargetType="{x:Type Controls:ShadowBox}">
        <Setter Property="Depth" Value="0" />
        <Setter Property="BlurRadius" Value="9" />
        <Setter Property="Focusable" Value="False" />
    </Style>
</ResourceDictionary>